{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node", "cypress"],
    "baseUrl": "./src",
    "paths": {
      "@src": ["./index.ts"],
      "@src/*": ["./*"]
    }
  },

  "include": ["src", "src/.bin/*.js"]
}
